{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noEmit": true,
    "incremental": false, // this must remain false when noEmit is true
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "./src/**/*",
    "./src/@types/**/*",
    "index.d.ts",
    ".eslintrc.js",
    "jest.setup.js",
    "jest.config.js",
    "babel.config.js",
    "index.js",
    "./@types/**/*",
  ]
}
